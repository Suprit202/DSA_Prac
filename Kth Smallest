class Solution {
  public:
    int kthSmallest(vector<int> &arr, int k) {
        // code here
        priority_queue<int> pq;
        
        int n = arr.size();
        for(int i = 0; i < n; i++){
            pq.push(-1*arr[i]);
        }
        
        while(k != 1){
            pq.pop();
            k--;
        }
        
        return (pq.top()*-1);
    }
};
