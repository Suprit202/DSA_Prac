class Node {
  public:
    int data;
    Node* next;

    Node(int x){
        data = x;
        next = NULL;
    }
};
*/
class Solution {
  public:
    Node *reverseKGroup(Node *head, int k) {
        // code here
        int count = 0;
        Node* temp = head;
        Node* lastNode = NULL;
        
        while(count < k && temp != NULL){
            temp = temp->next;
            count++;
        }
        
        if (temp != NULL) {
            lastNode = reverseKGroup(temp, k);
        }

        Node* curr = head;
        Node* prev = lastNode;
        Node* nex = NULL;
        
        int cnt = 0;
        
        while(cnt < count){
            nex = curr->next;
            curr->next = prev;
            prev = curr;
            curr = nex;
            cnt++;
        }
        
        return prev;
    }
};
